<h2>My Products</h2>
<table width=700 height= 500 align=center>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Info</th>
    <th>Action</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.amount %></td>
      <td><%= product.info %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %>
    </tr>
  <% end %>
</table>

<% cache(:recent_product) do %>
  <div>
    <table bgcolor='yellow' width=700 height= 200 align=center border=2>
      <tr><td colspan=3><h1>Latest Product !!!</h1></td></tr>
      <tr>
        <th>Name</th>
        <th>Amount</th>
        <th>Info</th>
      </tr>
      <tr>
        <td><%= @recent_product.name %></td>
        <td><%= @recent_product.amount %></td>
        <td><%= @recent_product.info %></td>
      </tr>
    </table>
  </div>
<% end %>